<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Main Content Area - Horizontal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:spacing="12dp">

        <!-- Left Panel - Items -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:spacing="12dp">

            <!-- Rack Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:spacing="8dp">

                <Button
                    android:id="@+id/rackButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="Rack"
                    android:textSize="14sp"
                    android:background="#88BDF2"
                    android:textColor="@android:color/white" />

                <EditText
                    android:id="@+id/rackResult"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="#4A4A4A"
                    android:hint="Empty"
                    android:textColor="@android:color/white"
                    android:textColorHint="#4A4A4A"
                    android:padding="8dp"
                    android:gravity="top|start"
                    android:scrollbars="vertical"
                    android:textSize="16sp"
                    android:inputType="text" />

            </LinearLayout>

            <!-- Label_1 Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:spacing="8dp">

                <Button
                    android:id="@+id/label1Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="Label_1"
                    android:textSize="14sp"
                    android:background="#6A89A7"
                    android:textColor="@android:color/white" />

                <EditText
                    android:id="@+id/label1Result"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="#CBCBCB"
                    android:hint="Empty"
                    android:textColor="@android:color/white"
                    android:textColorHint="#CBCBCB"
                    android:padding="8dp"
                    android:gravity="top|start"
                    android:scrollbars="vertical"
                    android:textSize="16sp"
                    android:inputType="text" />

            </LinearLayout>

            <!-- Label_2 Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:spacing="8dp">

                <Button
                    android:id="@+id/label2Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="Label_2"
                    android:textSize="14sp"
                    android:background="#88BDF2"
                    android:textColor="@android:color/white" />

                <EditText
                    android:id="@+id/label2Result"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="#4A4A4A"
                    android:hint="Empty"
                    android:textColor="@android:color/white"
                    android:textColorHint="#4A4A4A"
                    android:padding="8dp"
                    android:gravity="top|start"
                    android:scrollbars="vertical"
                    android:textSize="16sp"
                    android:inputType="text" />
                    android:scrollbars="vertical"
                    android:textSize="16sp"
                    android:inputType="text" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Panel - Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="8dp"
        android:layout_marginTop="16dp">

        <!-- Bottom Row - All Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:spacing="8dp">

            <!-- Settings Button -->
            <Button
                android:id="@+id/settingsButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="@string/settings_button"
                android:textSize="14sp"
                android:padding="8dp"
                android:background="@drawable/button_settings"
                android:textColor="@android:color/white" />

            <!-- Save Button -->
            <Button
                android:id="@+id/saveButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Save"
                android:textSize="14sp"
                android:padding="8dp"
                android:background="@drawable/button_save"
                android:textColor="@android:color/white" />

            <!-- Preview Button -->
            <Button
                android:id="@+id/previewButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Preview"
                android:textSize="14sp"
                android:padding="8dp"
                android:background="@drawable/button_preview"
                android:textColor="@android:color/white" />

            <!-- Send Button -->
            <Button
                android:id="@+id/sendButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Send"
                android:textSize="14sp"
                android:padding="8dp"
                android:background="@drawable/button_send"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
