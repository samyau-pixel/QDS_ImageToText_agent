<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="0dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#A4A5F5"
        android:gravity="center_vertical"
        android:spacing="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Import Template"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <!-- Back Button -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="Back"
            android:textSize="11sp"
            android:padding="4dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_settings"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <!-- Status Text -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading templates..."
        android:textSize="16sp"
        android:textColor="#333333"
        android:padding="16dp"
        android:gravity="center" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />

    <!-- Template List -->
    <ListView
        android:id="@+id/templateListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:divider="#CCCCCC"
        android:dividerHeight="1dp" />

    <!-- Instructions Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click on a template to import it"
        android:textSize="12sp"
        android:textColor="#666666"
        android:padding="16dp"
        android:gravity="center"
        android:background="#F5F5F5" />

</LinearLayout>
