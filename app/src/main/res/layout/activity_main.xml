<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@android:color/white">

    <!-- Header with Title and Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#A4A5F5"
        android:gravity="center_vertical"
        android:spacing="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ImageTText"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <!-- Header Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:spacing="4dp">

            <!-- Settings Button -->
            <Button
                android:id="@+id/settingsButton"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="@string/settings_button"
                android:textSize="11sp"
                android:padding="4dp"
                android:layout_margin="2dp"
                android:background="@drawable/button_settings"
                android:textColor="@android:color/white" />

            <!-- Save Button -->
            <Button
                android:id="@+id/saveButton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="Save"
                android:textSize="11sp"
                android:padding="4dp"
                android:layout_margin="2dp"
                android:background="@drawable/button_save"
                android:textColor="@android:color/white" />

            <!-- Preview Button -->
            <Button
                android:id="@+id/previewButton"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:text="Preview"
                android:textSize="11sp"
                android:padding="4dp"
                android:layout_margin="2dp"
                android:background="@drawable/button_preview"
                android:textColor="@android:color/white" />

            <!-- Import Button -->
            <Button
                android:id="@+id/importButton"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="Import"
                android:textSize="11sp"
                android:padding="4dp"
                android:layout_margin="2dp"
                android:background="@drawable/button_settings"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

    <!-- Main Content Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:spacing="12dp"
        android:padding="16dp">

        <!-- Left Panel - Items (Scrollable for dynamic fields) -->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/fieldsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:spacing="12dp">

                <!-- Rack Item (Default) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:spacing="16dp"
                    android:layout_margin="4dp">

                    <Button
                        android:id="@+id/rackButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:text="Rack"
                        android:textSize="14sp"
                        android:background="@drawable/button_rack"
                        android:textColor="@android:color/white" />

                    <EditText
                        android:id="@+id/rackResult"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/edittext_dark"
                        android:hint="Empty"
                        android:textColor="@android:color/white"
                        android:textColorHint="#4A4A4A"
                        android:padding="8dp"
                        android:gravity="center"
                        android:scrollbars="vertical"
                        android:textSize="16sp"
                        android:inputType="text"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />

                </LinearLayout>

                <!-- Label_1 Item (Default) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:spacing="16dp"
                    android:layout_margin="4dp">

                    <Button
                        android:id="@+id/label1Button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:text="Label_1"
                        android:textSize="14sp"
                        android:background="@drawable/button_label1"
                        android:textColor="@android:color/white" />

                    <EditText
                        android:id="@+id/label1Result"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/edittext_light"
                        android:hint="Empty"
                        android:textColor="@android:color/white"
                        android:textColorHint="#CBCBCB"
                        android:padding="8dp"
                        android:gravity="center"
                        android:scrollbars="vertical"
                        android:textSize="16sp"
                        android:inputType="text"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />

                </LinearLayout>

                <!-- Label_2 Item (Default) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:spacing="16dp"
                    android:layout_margin="4dp">

                    <Button
                        android:id="@+id/label2Button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:text="Label_2"
                        android:textSize="14sp"
                        android:background="@drawable/button_label2"
                        android:textColor="@android:color/white" />

                    <EditText
                        android:id="@+id/label2Result"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/edittext_dark"
                        android:hint="Empty"
                        android:textColor="@android:color/white"
                        android:textColorHint="#4A4A4A"
                        android:padding="8dp"
                        android:gravity="center"
                        android:scrollbars="vertical"
                        android:textSize="16sp"
                        android:inputType="text"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>
