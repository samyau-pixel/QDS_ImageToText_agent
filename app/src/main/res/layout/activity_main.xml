<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Main Content Area - Horizontal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:spacing="12dp">

        <!-- Left Panel - Items -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:spacing="12dp">

            <!-- Rack Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:spacing="8dp">

                <Button
                    android:id="@+id/rackButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Rack"
                    android:textSize="14sp"
                    android:background="@android:color/holo_blue_bright"
                    android:textColor="@android:color/white" />

                <EditText
                    android:id="@+id/rackResult"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray"
                    android:hint="Empty"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/darker_gray"
                    android:padding="8dp"
                    android:gravity="top|start"
                    android:scrollbars="vertical"
                    android:textSize="12sp"
                    android:inputType="text" />

            </LinearLayout>

            <!-- Label_1 Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:spacing="8dp">

                <Button
                    android:id="@+id/label1Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Label_1"
                    android:textSize="14sp"
                    android:background="@android:color/holo_blue_bright"
                    android:textColor="@android:color/white" />

                <EditText
                    android:id="@+id/label1Result"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray"
                    android:hint="Empty"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/darker_gray"
                    android:padding="8dp"
                    android:gravity="top|start"
                    android:scrollbars="vertical"
                    android:textSize="12sp"
                    android:inputType="text" />

            </LinearLayout>

            <!-- Label_2 Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:spacing="8dp">

                <Button
                    android:id="@+id/label2Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Label_2"
                    android:textSize="14sp"
                    android:background="@android:color/holo_blue_bright"
                    android:textColor="@android:color/white" />

                <EditText
                    android:id="@+id/label2Result"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray"
                    android:hint="Empty"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/darker_gray"
                    android:padding="8dp"
                    android:gravity="top|start"
                    android:scrollbars="vertical"
                    android:textSize="12sp"
                    android:inputType="text" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Panel - Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="8dp"
        android:layout_marginTop="16dp">

        <!-- First Row - Capture and Settings -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:spacing="8dp">

            <!-- Capture Button -->
            <Button
                android:id="@+id/captureButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="@string/capture_button"
                android:textSize="14sp"
                android:padding="8dp"
                android:background="@android:color/holo_blue_bright"
                android:textColor="@android:color/white" />

            <!-- Settings Button -->
            <Button
                android:id="@+id/settingsButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="@string/settings_button"
                android:textSize="14sp"
                android:padding="8dp"
                android:background="@android:color/holo_orange_light"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- Second Row - Send to Storage Button -->
        <Button
            android:id="@+id/sendButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Send to Storage"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="@android:color/holo_green_light"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>
